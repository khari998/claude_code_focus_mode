{
  "manifest_version": 3,
  "name": "Claude Code Focus Mode",
  "version": "1.5.0",
  "description": "Pause distracting sites while Claude Code is inactive",
  "permissions": ["tabs", "storage", "scripting", "alarms"],
  "host_permissions": [
    "http://127.0.0.1:31415/*",
    "*://*.youtube.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.reddit.com/*",
    "*://*.facebook.com/*",
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "*://*.twitch.tv/*",
    "*://*.netflix.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "media-controller.js", "content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
